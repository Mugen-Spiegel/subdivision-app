
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="container-lg text-center">
    <h2>Forgot your password?</h2>
    <%= render "users/shared/error_messages", resource: resource %>
    <div class="d-flex justify-content-center row g-3 align-items-center">
      <div class="col-auto">
          <%= f.label :email %><br />
          <%= f.email_field :email, {class: "form-control", placeholder:"Enter email",autofocus: true, autocomplete:"email" }%>
        </div>
    <%= f.submit "Reset password instructions", {class:"btn btn-primary"} %>
    <%= render "users/shared/links" %>
    </div>
  </div>
<% end %>
