<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
<div class="container-lg text-center">
    <h2>Sign up</h2>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="  row g-3 align-items-center">
          <div class="form-group col">
            <%unless params['subdivision_uuid'].nil? %>
                <%= form.hidden_field :subdivision_id, value: _subdivision(params['subdivision_uuid']).id %>
            <%else %>
                <%= form.hidden_field :subdivision_id, value: params["user"]['subdivision_id'] %>
            <%end%>
              <%= form.label :first_name%>
              <%= form.text_field :first_name, {class:"form-control", placeholder:"First Name"} %>
          </div>
          <div class="form-group col">
              <%= form.label :middle_name %>
              <%= form.text_field :middle_name, {class:"form-control", placeholder:"Middle Name"} %>
          </div>
          <div class="form-group col">
              <%= form.label :last_name, style: "display: block" %>
              <%= form.text_field :last_name, {class:"form-control", placeholder:"Last Name"}%>
          </div>
          <div class="form-group col">
            <%= form.label :block, style: "display: block" %>
            <%= form.text_field :block, {class:"form-control",  placeholder:"Block"} %>
          </div>
          <div class="form-group col">
            <%= form.label :lot, style: "display: block" %>
            <%= form.text_field :lot, {class:"form-control",  placeholder:"Lot"} %>
          </div>
          <div class="form-group col">
            <%= form.label :street, style: "display: block" %>
            <%= form.text_field :street,  {class:"form-control",  placeholder:"Street"} %>
          </div>
          <div class="mb-3">
            <%= form.label :email %><br />
            <%= form.email_field :email, {class: "form-control", placeholder:"Enter email",autofocus: true, autocomplete:"email" }%>
          </div>
          <div class="mb-3">
            <%= form.label :password %><br />
            <%= form.password_field :password,  {class:"form-control", autocomplete: "new-password"} %>
            <%= form.label :password %>

            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
          </div>
          <div class="mb-3">
            <%= form.label :password_confirmation %><br />
            <%= form.password_field :password_confirmation, {class:"form-control", autocomplete: "new-password"} %>
          </div>
    <%= form.submit "Sign up", {class:"btn btn-primary"} %>
    <%= render "users/shared/links" %>
    </div>
  </div>
<% end %>
