<div class="card-header form-row">
        <%= form_with url: residence_index_path, method: :get, data: { turbo_frame: "user_table" }  do |form| %>
            <div class="row">
                <div class="col">
                    <%= form.select :street, street_list, {}, {class:"form-control"}%>
                </div>
                <div class="col">
                    <%= form.text_field :first_name , {class:"form-control", placeholder:"First Name"} %>
                </div>
                <div class="col">
                    <%= form.text_field :last_name , {class:"form-control", placeholder:"Last Name"} %>
                </div>
                <div class="col">
                    <%= form.submit "Search", {class:"btn btn-primary "} %>
                </div>
            </div>
            <br>
        <% end %>
</div>