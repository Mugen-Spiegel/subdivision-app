<div class="card-header form-row">
    <%= form_with url: water_billing_index_path, method: :get, data: {turbo_frame: "water_bill_search"} do |form| %>
        <div class="card-header form-row">
            <div class="row">
                <%= form.hidden_field :subdivision_id , {value: params["subdivision_id"]} %>
                <div class="col">
                    <%= form.select :year_list, year_list, {}, {class:"form-control"}%>
                </div>
                <div class="col">
                    <%= form.select :month, month_list, {}, {class:"form-control"}%>
                </div>
                <div class="col">
                    <%= form.select :status, status_list, {}, {class:"form-control"}%>
                </div>
                <div class="col">
                    <%= form.submit "Search", {class:"btn btn-primary"} %>
                </div>
                
            </div>
        </div>
    <% end %>
</div>
<br>